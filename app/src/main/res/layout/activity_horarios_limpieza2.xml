<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HorariosLimpieza2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Horarios de limpieza de la pecera"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:fontFamily="@font/sunset"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pecera"/>
            </LinearLayout>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/mayo0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/junio0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/julio0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/agosto0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/septiembre0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/octubre0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/noviembre0"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/mayov"
                android:id="@+id/diciembre0"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>