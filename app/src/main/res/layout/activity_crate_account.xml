<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrateAccountActivity"
    android:background="@drawable/fondo12"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/apli"
                   android:fontFamily="@font/inversions"
                   android:textSize="35dp"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/morado"/>

               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="45dp"
                   android:background="@drawable/logopecesito"
                   android:layout_marginStart="35dp"
                   android:layout_gravity="left"/>
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/Registro"
               android:layout_gravity="center"
               android:textSize="33dp"
               android:layout_margin="15dp"
               android:textColor="@color/moradodegradado"
               android:fontFamily="@font/lovelo"
               android:layout_marginTop="20dp"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center">
               <android.support.design.widget.TextInputLayout
                   android:id="@+id/tilArea"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginBottom="15dp"
                   android:fontFamily="@font/gist"
                   android:textColorHint="@color/blanco"
                   >
                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/nusuario"
                       android:layout_width="270dp"
                       android:layout_height="wrap_content"
                       android:hint="@string/nombreusuario"
                       android:fontFamily="@font/gist"
                       android:textColorHint="@color/blanco"
                       android:textColor="@color/blanco" />
               </android.support.design.widget.TextInputLayout>

               <android.support.design.widget.TextInputLayout
                   android:id="@+id/tilArea4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginBottom="15dp"
                   android:textColorHint="@color/blanco"
                   android:fontFamily="@font/gist">
                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/email"
                       android:layout_width="270dp"
                       android:layout_height="wrap_content"
                       android:hint="@string/email"
                       android:inputType="textEmailAddress"
                       android:fontFamily="@font/gist"
                       android:textColorHint="@color/blanco"
                       android:textColor="@color/blanco" />
               </android.support.design.widget.TextInputLayout>

               <android.support.design.widget.TextInputLayout
                   android:id="@+id/tilArea2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="15dp"
                   android:textColorHint="@color/blanco"
                   android:fontFamily="@font/gist">

                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/password"
                       android:layout_width="270dp"
                       android:textColorHint="@color/blanco"
                       android:textColor="@color/blanco"
                       android:layout_height="wrap_content"
                       android:hint="@string/password"
                       android:fontFamily="@font/gist"
                       android:inputType="textPassword" />
               </android.support.design.widget.TextInputLayout>

               <android.support.design.widget.TextInputLayout
                   android:id="@+id/tilArea3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColorHint="@color/blanco"
                   android:fontFamily="@font/gist">

                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/password2"
                       android:layout_width="270dp"
                       android:layout_height="wrap_content"
                       android:hint="@string/passwordagain"
                       android:fontFamily="@font/gist"
                       android:textColor="@color/blanco"
                       android:textColorHint="@color/blanco"
                       android:inputType="textPassword" />
               </android.support.design.widget.TextInputLayout>

           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/sexo"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/typew"
               android:layout_marginLeft="40dp"
               android:textColor="@color/blanco"
               android:textSize="17dp"


               />

           <RelativeLayout
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center">

               <RadioGroup
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAlignment="center"
                   android:id="@+id/radiogroup">

                   <RadioButton
                       android:id="@+id/hombre"
                       style="@android:style/Widget.CompoundButton.RadioButton"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text="Hombre"
                       android:fontFamily="@font/gist"
                       android:onClick="onRadioButtonClicked"
                       tools:text="Hombre"
                       android:textColor="@color/blanco"
                       android:checked="true"/>

                   <RadioButton
                       android:id="@+id/mujer"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:onClick="onRadioButtonClicked"
                       android:text="Mujer"
                       android:textColor="@color/blanco"
                       android:fontFamily="@font/gist"
                       tools:text="Mujer" />
               </RadioGroup>
           </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <android.support.design.widget.TextInputLayout
               android:id="@+id/tilArea1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:fontFamily="@font/gist"
               android:textColorHint="@color/blanco"
               >
               <android.support.design.widget.TextInputEditText
                   android:id="@+id/codigo"
                   android:layout_width="300dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="40dp"
                   android:hint="@string/escribecodigo"
                   android:textColor="@color/blanco"
                   android:fontFamily="@font/gist"
                   android:textColorHint="@color/blanco"
                   android:textSize="15dp"
                   android:inputType="number"
                   />
           </android.support.design.widget.TextInputLayout>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_margin="10dp"
               android:fontFamily="@font/typew"
               android:textColor="@color/blanco"
               android:text="@string/especificacionesdecodigo"
               android:textSize="10.5dp"

               />


       </LinearLayout>
           <Button
               android:layout_width="120dp"
               android:id="@+id/siguiente"
               android:layout_height="50dp"
               android:layout_gravity="right"
               android:text="Siguiente"
               android:textColor="@color/blanco"
               android:textSize="16dp"
               android:layout_margin="20dp"
               android:fontFamily="@font/waste"
               android:background="@drawable/degradado2"
               />
       </LinearLayout>
   </ScrollView>
</android.support.constraint.ConstraintLayout>