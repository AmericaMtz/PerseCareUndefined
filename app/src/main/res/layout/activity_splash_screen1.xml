<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen1"
    android:background="@drawable/fondoazul"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="184dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="-100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logoempresa" />
        <TextView
            android:id="@+id/tituloempresa"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:fontFamily="@font/lovelo"
            android:gravity="center"
            android:text="@string/empresa"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="-225dp"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/frase"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fontFamily="@font/inversions"
            android:gravity="center"
            android:text="@string/frase"
            android:textColor="@color/buttonRosaDegradado"
            android:textSize="22dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>