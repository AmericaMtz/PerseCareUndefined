<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Profile"
    android:background="@drawable/degradado2">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:layout_margin="15dp"
             android:background="@drawable/navfondo"/>
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="-75dp"
             android:layout_gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:background="@drawable/pez30"/>
         </RelativeLayout>
         <TextView
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="-18dp"
             android:layout_marginBottom="20dp"
             android:layout_height="wrap_content"
             android:fontFamily="@font/yorkwhiteletter"
             android:text="America Esmeralda"
             android:id="@+id/profile_txtnombre"
             android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             android:textColor="@color/blanco"
             android:textSize="38dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Correo: "
               android:fontFamily="@font/gist"
               android:textSize="20sp"
               android:textStyle="bold"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/profile_txtcorreo"
               android:text="merimtz1@gmail.com "
               android:fontFamily="@font/amperzand"
               android:textSize="17sp"
               />

        </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo: "
                android:fontFamily="@font/gist"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_txtSexo"
                android:text="Mujer"
                android:fontFamily="@font/amperzand"
                android:textSize="17sp"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu cÃ³digo: "
                android:fontFamily="@font/gist"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890 "
                android:id="@+id/profile_txtCodigo"
                android:fontFamily="@font/amperzand"
                android:textSize="17sp"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agua de tus peces: "
                android:fontFamily="@font/gist"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salada."
                android:id="@+id/profile_txtTipoAgua"
                android:fontFamily="@font/amperzand"
                android:textSize="17sp"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de peces: "
                android:fontFamily="@font/gist"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/profile_txtCantidadPeces"
                android:fontFamily="@font/amperzand"
                android:textSize="17sp"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Litros de la pecera: "
                android:fontFamily="@font/gist"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 lt"
                android:id="@+id/profile_txtLitrosPecera"
                android:fontFamily="@font/amperzand"
                android:textSize="17sp"
                />

         </LinearLayout>
          <android.support.design.widget.FloatingActionButton
              android:layout_width="45dp"
              android:layout_gravity="right"
              android:id="@+id/profile_buttonEdit"
              android:layout_margin="35dp"
              android:src="@drawable/ic_edit"
              android:layout_height="45dp"
              />

      </LinearLayout>

   </ScrollView>

</android.support.constraint.ConstraintLayout>