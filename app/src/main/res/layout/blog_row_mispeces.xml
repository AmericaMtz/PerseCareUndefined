<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pictureCardMisPeces"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_margin="25dp"
    android:background="@android:color/transparent"
    android:elevation="90dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/degradado2">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pez18"
            android:layout_margin="15dp"
            android:id="@+id/MisPecesImagen"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Doris"
                   android:textStyle="bold"
                   android:id="@+id/MisPecesNombre"
                   android:layout_gravity="center"
                   android:layout_margin="10dp"
                   android:textColor="@color/blanco"
                   android:textSize="40sp"
                   android:fontFamily="@font/alice"/>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Especie: "
                  android:fontFamily="@font/champagne"
                  android:textStyle="bold"
                  android:textSize="17sp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Pez Globo"
                  android:id="@+id/MisPecesEspecie"
                  android:textSize="14sp"
                  android:fontFamily="@font/multicolore"/>
          </LinearLayout>
       </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>