<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocuestionarios"
    tools:context=".Activities.ContenededorHorarios">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:id="@+id/textoHorarios"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/sunset"
           android:gravity="center"
           android:text="Horarios "
           android:layout_marginTop="20dp"
           android:textSize="40dp" />
       <TextView
           android:layout_width="330dp"
           android:textSize="20sp"
           android:layout_marginTop="20dp"
           android:layout_height="wrap_content"
           android:fontFamily="@font/mvboli"
           android:text="En este apartado podrás encontrar cuales son los horarios recomendados y previamente calculados por el sistema para atender las necesidades básicas de tus mascotas (horarios de comida y liempieza de la pecera) con el fin de brindarles un mejor cuidado"/>
   </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedor3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="70dp">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottombar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        design:itemBackground="@color/colorAccent"
        design:itemIconTint="@color/blanco"
        design:itemTextColor="@color/blanco"
        design:menu="@menu/horarios" />

</RelativeLayout>